<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.layer.atlas.messenger.AtlasSettingsScreen"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/atlas_background_white"
    android:orientation="vertical"
    >
    <View 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:color/transparent"
        />
    
    <EditText 
        android:id="@+id/atlas_screen_login_username"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:background="@drawable/atlas_ctl_edit_text"
        android:inputType="textNoSuggestions"
        android:hint="Login"
        />
    <EditText 
        android:id="@+id/atlas_screen_login_password"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:background="@drawable/atlas_ctl_edit_text"
        android:password="true"
        android:hint="password"
        />
    
    <TextView
        android:id="@+id/atlas_screen_login_go_btn"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/atlas_text_size_general"
        android:textColor="@color/atlas_background_white"
        android:background="@drawable/atlas_shape_btn_rectangle_blue"
        android:text="login"
        
        />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@android:color/transparent"
        />
        
</LinearLayout>

