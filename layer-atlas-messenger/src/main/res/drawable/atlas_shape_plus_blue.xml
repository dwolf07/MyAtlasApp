<?xml version="1.0" encoding="utf-8"?>

<!-- Based on radius: 28dp  -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	
	<item 
		android:left="4dp"
		android:right="4dp"
		android:top="4dp"
		android:bottom="4dp"
		>
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="oval"
			>
			<solid android:color="@color/atlas_text_blue"/>
		</shape>
	</item>


	<item 
		android:left="20dp"
		android:right="20dp"
		android:top="27dp"
		android:bottom="27dp"
		>
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle"
			>
			<solid android:color="@color/atlas_background_white"/>
		</shape>
	</item>
	
	<item 
		android:left="27dp"
		android:right="27dp"
		android:top="20dp"
		android:bottom="20dp"
		>
		<shape xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle"
			>
			<solid android:color="@color/atlas_background_white"/>
		</shape>
	</item>
	
